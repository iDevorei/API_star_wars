						"exec": [
							"let jsonData = pm.response.json();\r",
							"\r",
							"// 1. Correct response format JSON\r",
							"\r",
							"pm.test(\"Response format is JSON\", function () {\r",
							"    pm.response.to.have.jsonBody();\r",
							"});\r",
							"\r",
							"// 2. All the declarated fields in the response\r",
							"\r",
							"pm.test(\"All fields are present\", function () {\r",
							"    // let jsonData = pm.response.json();\r",
							"\r",
							"    let fields = [\"people\", \"planets\", \"films\", \"species\", \"vehicles\", \"starships\"];\r",
							"\r",
							"    fields.forEach(field => {\r",
							"        pm.test(`field \"${field}\" is present`, () => {\r",
							"            pm.expect(jsonData).to.have.property(field);\r",
							"        });\r",
							"    });\r",
							"});\r",
							"\r",
							"// 3. field isn't NULL\r",
							"\r",
							"pm.test(\"All fields are not null\", function () {\r",
							"    // let jsonData = pm.response.json();\r",
							"\r",
							"    let fields = [\"people\", \"planets\", \"films\", \"species\", \"vehicles\", \"starships\"];\r",
							"\r",
							"        fields.forEach(field => {\r",
							"            pm.test(`field \"${field}\" not NULL`, () => {\r",
							"                pm.expect(jsonData[field]).to.not.be.null; // Check if the field is not null\r",
							"            });\r",
							"    });\r",
							"});\r",
							"\r",
							"// 4. fields are not empty\r",
							"\r",
							"pm.test(\"All fields are not empty\", function () {\r",
							"    // let jsonData = pm.response.json();\r",
							"\r",
							"    let fields = [\"people\", \"planets\", \"films\", \"species\", \"vehicles\", \"starships\"];\r",
							"\r",
							"    fields.forEach(field => {\r",
							"        pm.test(`field \"${field}\" is not empty`, () => {\r",
							"            pm.expect(jsonData[field]).to.not.be.empty;\r",
							"        });\r",
							"    });\r",
							"    // pm.expect(jsonData.people).to.not.be.empty;\r",
							"});\r",
							"\r",
							"// 5. field corresponds to a specific value\r",
							"\r",
							"pm.test(\"fields correspond to expected URLs\", function () {\r",
							"    // let jsonData = pm.response.json();\r",
							"\r",
							"    let expectedURLs = {\r",
							"        \"people\": \"https://swapi.dev/api/people/\",\r",
							"        \"planets\": \"https://swapi.dev/api/planets/\",\r",
							"        \"films\": \"https://swapi.dev/api/films/\",\r",
							"        \"species\": \"https://swapi.dev/api/species/\",\r",
							"        \"vehicles\": \"https://swapi.dev/api/vehicles/\",\r",
							"        \"starships\": \"https://swapi.dev/api/starships/\"\r",
							"    };\r",
							"\r",
							"    Object.keys(expectedURLs).forEach(field => {\r",
							"        pm.test(`field \"${field}\" has correct URL`, () => {\r",
							"            pm.expect(jsonData[field]).to.equal(expectedURLs[field]);\r",
							"        });\r",
							"    });\r",
							"\r",
							"    // pm.expect(jsonData.people).to.equal(\"https://swapi.dev/api/people/\");\r",
							"    // pm.expect(jsonData.planets).to.equal(\"https://swapi.dev/api/planets/\");\r",
							"    // pm.expect(jsonData.films).to.equal(\"https://swapi.dev/api/films/\");\r",
							"    // pm.expect(jsonData.species).to.equal(\"https://swapi.dev/api/species/\");\r",
							"    // pm.expect(jsonData.vehicles).to.equal(\"https://swapi.dev/api/vehicles/\");\r",
							"    // pm.expect(jsonData.starships).to.equal(\"https://swapi.dev/api/starships/\");\r",
							"});\r",
							"\r",
							"// 6. Status code is 200 ok\r",
							"\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// 7. Status message is OK\r",
							"\r",
							"pm.test(\"Status message is OK\", function () {\r",
							"    pm.response.to.have.status(\"OK\");\r",
							"});\r",
							"\r",
							"// 8. Response time < 1000ms\r",
							"\r",
							"pm.test(\"Response time < 1000ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(1000);\r",
							"});\r",
							"\r",
							"// 9. specific header in the response\r",
							"\r",
							"pm.test(\"Content-Type is application/json\", function () {\r",
							"    // pm.expect(pm.response.headers.get(\"Content-Type\")).to.eql(\"application/json\");\r",
