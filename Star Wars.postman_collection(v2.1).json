							"});\r",
							"\r",
							"// 10. response has a specific header with a specific value\r",
							"\r",
							"pm.test(\"response has a specific header with a specific value\", function () {\r",
							"    pm.response.to.be.header(\"Content-Type\", \"application/json\"); \r",
							"});\r",
							"\r",
							"// 11. Cookies exist\r",
							"\r",
							"pm.test(\"Cookies exist\", function () {\r",
							"    // проверим конкретный куки\r",
							"    pm.expect(pm.cookies.has(\"__cfduid\")).to.be.true;\r",
							"\r",
							"    // есть ли вообще куки\r",
							"    pm.expect(Object.keys(pm.cookies.toObject()).length).to.be.above(0);\r",
							"});\r",
